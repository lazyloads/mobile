doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="renderer" content="webkit")
		meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=0, minimal-ui")
		meta(name="imagemode" content="force")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="apple-mobile-web-app-status-bar-style" content="black")
		meta(name="format-detection" content="telephone=no")
		meta(http-equiv="pragma" content="no-cache")
		title 小米商城
		link(rel="shortcut icon" href="../favicon_icon/favicon.ico")
		link(rel="stylesheet" href="css/style.min.css")
		script(src="../static/_modules_js/common.js")
	body
		#J_visibleWatcher.viewport
			#J_home.page-index(data-log="首页")
				.section.section-header
					.search-bar
						a(href="")
							span.icon.icon-search
							span.text 搜索商品名称
					.search-bottom
				#J_slider.section.section-slider
					ul#J_slider-img.slider-wrap
						template(v-for="item in data.slider")
							li.slider-img
								a(v-bind:href="item.image")
									img.lazy(v-bind:src="item.image")
					#btnBox.slider-page
						span.current 1
						span 2
						span 3
				.section.section-list
					.container
						.mcells-auto-fill
							#J_phoneInfor.body(data-index="0")
								template(v-for="item in data.one")
									div
										a(href="")
											.items(:class="item.sale_sign == 'phone' ? 'items-1' : ''")
												img.lazy(v-bind:src="item.image")
					#J_productList.container
						template(v-for="item in data.two")
							.container
								.list.J_linksign-customize
									.items
										.img
											a(v-bind:href="item.image_url")
												img.lazy.icon(v-bind:src="item.image")
										.infor
											a(href="")
												p.name(v-text="item.title")
												p.brief(v-text="item.brief")
												p.price(v-text="item.price")
					.container
						.mcells-auto-fill
							#J_mobileCard.body.mobile-card(data-index="64")
								template(v-for="item in data.three")
									div
										a(v-bind:href="item.image_url")
											.items.J_linksign-customize
												img.lazy(v-bind:src="item.image")
				.section.section-footer
					ul
						li
							a.current(href="index.html")
								.nav
									.ih.ispr
									p 首页
						li
							a(href="../11733_02/category.html")
								.nav
									.ic.ispr
									p 分类
						li
							a(href="")
								.nav
									.is.ispr
									p 购物车
						li
							a(href="")
								.nav
									.if.ispr
									p 我的
		script(src="../static/_modules_js/jquery.js")
		script(src="js/script.min.js")
